<template>
    <% if @tabs_granted["dashboard"] %>
        <%= nav_link("/driver") do %>
            <i class="fas fa-tachometer-alt"></i>
            <span><%= I18n.t("core.shared.sidebar_nav_dashboard") %>
        <% end %>
    <% end %>
    <% if @tabs_granted["event_types"] %>
        <b-menu-item>
            <template slot="label" slot-scope="props">
                <i class="fas fa-book-open"></i>
                <span><%= I18n.t("driver.shared.sidebar_nav_catalogs") %></span>
                <b-icon class="is-pulled-right" :icon="props.expanded ? 'caret-down' : 'caret-right'"></b-icon>
            </template>
            <% if @tabs_granted["event_types"]%>
                <li>
                    <%= link_to cloud_driver.event_types_path, class: "" do %>
                        <i class="fas fa-list"></i>
                        <span><%= I18n.t("driver.shared.sidebar_nav_event_types") %></span>
                    <% end %>
                </li>
            <% end %>
        </b-menu-item>
    <% end %>
    <% if @tabs_granted["calendars"]%>
        <li>
            <%= link_to cloud_driver.calendars_path, class: "" do %>
                <i class="fas fa-calendar-alt"></i>
                <span><%= I18n.t("driver.shared.sidebar_nav_calendar") %></span>
            <% end %>
        </li>
    <% end %>
    <% if @tabs_granted["workflows"] || @tabs_granted["dashboards"]%>
        <b-menu-item>
            <template slot="label" slot-scope="props">
                <i class="fas fa-cogs"></i>
                <span><%= I18n.t("core.shared.sidebar_nav_settings") %></span>
                <b-icon class="is-pulled-right" :icon="props.expanded ? 'caret-down' : 'caret-right'"></b-icon>
            </template>
            <% if @tabs_granted["workflows"]%>
                <li>
                    <%= link_to cloud_driver.workflows_path, class: "" do %>
                        <i class="fas fa-project-diagram"></i>
                        <span><%= I18n.t("core.shared.sidebar_nav_workflows") %></span>
                    <% end %>
                </li>
            <% end %>
            <% if @tabs_granted["dashboards"]%>
                <li>
                    <%= link_to cloud_driver.dashboards_path, class: "" do %>
                        <i class="fas fa-tachometer-alt"></i>
                        <span><%= I18n.t("core.shared.sidebar_nav_dashboards") %></span>
                    <% end %>
                </li>
            <% end %>
        </b-menu-item>
    <% end %>
</template>
