<% @current_path = request.env['PATH_INFO'] %>
<% @tabs_granted = {}
    [
        {name: "dashboard", route: "cloud_driver/dashboards", privilege: "show"},
        {name: "event_types", route: "cloud_driver/catalog/event_types"},
        {name: "dashboards"},
        {name: "calendars"},
        {name: "workflows"}
    ].each do |tab|
        if tab[:route]
            privilege = @account[:current_user][:abilities][tab[:route]]
        else
            privilege = @account[:current_user][:abilities]["#{lesli_engine_or_instance}/#{tab[:name]}"]
        end

        unless privilege.blank?
            privilege_name = "index"
            privilege_name = tab[:privilege] if tab[:privilege]

            @tabs_granted[tab[:name]] = privilege[privilege_name]
        end
    end
